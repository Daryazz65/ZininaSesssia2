<Window x:Class="ZininaSesssia2.View.Windows.JournalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZininaSesssia2.View.Windows"
        mc:Ignorable="d"
        Title="Окно отчета" Height="500" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Name="ProfileGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Отчетный журнал" FontWeight="Bold" 
                   HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="1" FontSize="25" HorizontalAlignment="Center"><Hyperlink Name="OneHl" 
                    Click="OneHl_Click">Сведения о специальностях</Hyperlink></TextBlock>
        <TextBlock Grid.Row="2" FontSize="25" HorizontalAlignment="Center"><Hyperlink Name="TwoHl" 
                    Click="TwoHl_Click">Сведения о кафедрах</Hyperlink></TextBlock>
        <TextBlock Grid.Row="3" FontSize="25" HorizontalAlignment="Center"><Hyperlink Name="ThreeHl" 
                    Click="ThreeHl_Click">Сведения о дисциплинах </Hyperlink></TextBlock>
    </Grid>
</Window>